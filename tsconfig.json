{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2017"
  },
  "exclude": [
    "**/node_modules/**",
    "node_modules",
    "**node_modules",
    "test/**/*"
  ],
  "include": [
    "index.ts",
    "src/**/*",
    "scripts/**/*"
  ]
}
